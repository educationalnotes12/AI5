class TextEditor:
    def __init__(self):
        self.text=""
        self.undo_stack=[]
        self.redo_stack=[]

    def make_change(self,new_text):
        self.undo_stack.append(self.text)
        self.text=new_text
        self.redo_stack.clear()

    def undo(self):
        if self.undo_stack:
            self.redo_stack.append(self.text)
            self.text=self.undo_stack.pop()
        else:
            print("Nothing to undo")

    def redo(self):
        if self.redo_stack:
            self.undo_stack.append(self.text)
            self.text=self.redo_stack.pop()
        else:
            print("Nothing to redo")

    def display(self):
        print("Current Document State:",self.text)

e=TextEditor()
while True:
    print("\n1.Make Change 2.Undo 3.Redo 4.Display 5.Exit")
    ch=int(input())
    if ch==1:
        e.make_change(input("Enter new text: "))
    elif ch==2:
        e.undo()
    elif ch==3:
        e.redo()
    elif ch==4:
        e.display()
    elif ch==5:
        break
